import os

AddOption('--debug-build', action='store_true', dest='debug_build',
	default=False)

env = Environment()

env.ParseConfig('pkg-config --cflags --libs gl glu glew Magick++ assimp freetype2')
env.Append(
	CPPPATH=['.'],
	LIBS=['glut', 'pthread'],
	CPPFLAGS=['-std=c++11', '-Wall', '-Wno-unknown-attributes', '-Wno-sign-compare'],
	CPPDEFINES=['GLM_FORCE_RADIANS'])

if GetOption('debug_build'):
	env.Append(CPPFLAGS=['-g', '-O0', '-D_DEBUG'])
else:
	env['CXX'] = 'clang++'
	if 'ENV' in env['ENV'] and 'TERM' in env['ENV']:
		env['ENV']['TERM'] = os.environ['TERM']

common_objs = env.Object([
	'camera.cpp',
	'texture.cpp',
	'mesh.cpp',
	'program.cpp',
	'window.cpp',
	'fps.cpp',
	'dtools.cpp',
	'label.cpp',
	'frustum.cpp'])

env.Program('test_triangle.cpp')
env.Program('test_triangle_minimal.cpp')
env.Program('test_transform.cpp')
env.Program('test_transform_minimal.cpp')
env.Program('test_animation.cpp')
env.Program('test_lighting.cpp')
env.Program('test_screenshot.cpp')
env.Program('test_screenshot_fbo.cpp')
env.Program(['test_parallaxdisp.cpp', common_objs])
env.Program(['test_normalmap.cpp', common_objs])
env.Program(['test_phong.cpp', common_objs])
env.Program(['test_parallaxnorm.cpp', common_objs])
env.Program(['test_texrender.cpp', common_objs])
env.Program(['test_offrender.cpp', common_objs])
env.Program(['test_texture.cpp', common_objs])
env.Program(['test_texture_create.cpp', common_objs])
env.Program(['test_texture_raw.cpp', common_objs])
env.Program(['test_blur.cpp', common_objs])
env.Program(['test_window.cpp', common_objs])
env.Program(['test_scene.cpp', common_objs])
env.Program(['test_texture_array.cpp', common_objs])
env.Program(['test_geometry.cpp', common_objs])
env.Program(['test_font.cpp', common_objs])
env.Program(['test_frustum.cpp', common_objs])
